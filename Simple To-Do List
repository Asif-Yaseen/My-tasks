import tkinter as tk

# Function to add a new task to the listbox
def add_task():
    task_text = entry.get()
    if task_text.strip():
        listbox.insert(tk.END, task_text)
        entry.delete(0, tk.END)
    else:
        print("No task entered.")

# Function to delete the selected task from the listbox
def delete_task():
    selected_task_index = listbox.curselection()
    if selected_task_index:
        listbox.delete(selected_task_index[0])
    else:
        print("No task selected to delete.")

# Function to mark the selected task as done
def mark_done():
    selected_task_index = listbox.curselection()
    if selected_task_index:
        current_task = listbox.get(selected_task_index[0])
        if not current_task.startswith("âœ”ï¸ "):
            marked_task = "âœ”ï¸ " + current_task
            listbox.delete(selected_task_index[0])
            listbox.insert(selected_task_index[0], marked_task)
            listbox.itemconfig(selected_task_index[0], {'fg': 'green'})
    else:
        print("No task selected to mark as done.")

# Initialize the main application window
root = tk.Tk()
root.title("ğŸŒˆ Colorful To-Do List")
root.geometry("500x450")
root.configure(bg="#f0f8ff")  # Light blue background

# Entry widget for typing new tasks
entry = tk.Entry(root, width=40, font=("Arial", 12), bg="#fffacd", fg="#2F58B7")
entry.pack(pady=10)

# Button styles
button_style = {
    "width": 20,
    "font": ("Arial", 10, "bold"),
    "bg": "#52c67b",  # Light sky blue
    "fg": "#FFFFFF",  # Navy
    "activebackground": "#48a962",
    "activeforeground": "#ffffff"
}

# Button to add a task
add_button = tk.Button(root, text="â• Add Task", command=add_task, **button_style)
add_button.pack(pady=5)

# Listbox to display tasks
listbox = tk.Listbox(root, width=50, height=10, font=("Arial", 12), bg="#e6e6fa", fg="#2D5EB8", selectbackground="#dda0dd")
listbox.pack(pady=10)

# Button to mark a task as done
mark_button = tk.Button(root, text="âœ”ï¸ Mark as Done", command=mark_done, **button_style)
mark_button.pack(pady=5)

# Button to delete a task
delete_button = tk.Button(root, text="ğŸ—‘ï¸ Delete Task", command=delete_task, **button_style)
delete_button.pack(pady=5)

# Start the Tkinter event loop
root.mainloop()